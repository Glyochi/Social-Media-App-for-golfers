<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/group_profile"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:background="@color/blueGreen"
            >

            <ImageView
                android:id="@+id/group_imageView_wallpaper"
                android:layout_width="600dp"
                android:layout_height="350dp"
                android:layout_marginTop="-16dp"
                android:layout_marginLeft="-100dp"

                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <LinearLayout
                android:id="@+id/group_layout_profileLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/group_layout_groupInfo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/group_textView_groupName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_corner_view"
                        android:backgroundTint="@color/blueGreen"
                        android:paddingLeft="18dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/azure"
                        android:text="Default group name"
                        />
                    <TextView
                        android:id="@+id/group_textView_groupDescription"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="18dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="20dp"
                        android:layout_gravity="left"
                        android:background="@drawable/rounded_corner_view"
                        android:backgroundTint="@color/blueGreen"
                        android:textColor="@color/azure"
                        android:text="Default group's description" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/group_layout_settings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/group_button_groupSettings"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="Group's setting" />

                    <Button
                        android:id="@+id/group_button_leaveOrJoin"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Leave" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>